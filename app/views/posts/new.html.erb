<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<h2>Add New Post</h2>

<%= form_for (@post) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, autocomplete: "off" %>
  </div>



  <div class="actions">
    <%= f.submit "Save Post" %>
      
  </div>
<% end %>
</div>
